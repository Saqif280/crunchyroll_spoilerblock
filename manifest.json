{
  "manifest_version": 2,

  "name": "Crunchyroll Spoilerblock",
  "version": "0.1.0",
  "description": "Hides thumbnails of episodes on Crunchyroll.com, so you can find the episode you're looking for with your eyes open.",

  "browser_action": {
    // "default_icon": "icons/icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "css": ["content.css"],
    // "js": ["content.js"],
    "matches": ["https://www.crunchyroll.com/*","http://www.crunchyroll.com/*"]
  }],

  "background": {
		// "scripts": ["background.js"],
		// "persistent": true
	},

  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ]
}
