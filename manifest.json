{
  "manifest_version": 2,

  "name": "Crunchyroll Spoilerblock",
  "version": "0.0.0.2",
  "description": "Hides thumbnails and/or titles of episodes on Crunchyroll.com, so you can find the episode you're looking for with your eyes open.",

  "browser_action": {
    "default_icon": "images/icon128.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "images/icon128.png"
  },

  "content_scripts": [{
    "css": ["content.css"],
    "js": ["content.js"],
    "matches": ["https://www.crunchyroll.com/*","http://www.crunchyroll.com/*"]
  }],

  "background": {
		"scripts": ["background.js"],
		"persistent": true
	},

  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ]
}
